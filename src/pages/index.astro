            </div>
        </div>
    </section>

    <!-- START Stats Section -->
    <StatsSection client:load />
    <!-- END Stats Section -->

    <!-- Platform Section -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="platform-card text-white rounded-2xl overflow-hidden">
                <div class="flex flex-col md:flex-row">
                    <div class="md:w-1/2 p-8 md:p-12">
                        <h2 class="text-3xl md:text-4xl font-bold mb-6">Join Main Platforms Works</h2>
